{
	"extends": "@sindresorhus/tsconfig",
	"compilerOptions": {
		"outDir": "dist",
		"target": "ES2019",
		"lib": [
			"ES2020"
		]
	},
	"include": [
		"source"
	],
	"ts-node": {
		"transpileOnly": true,
		"files": true,
		"experimentalResolver": true
	},
	"typedocOptions": {
		"out": "docs",
		"excludePrivate": true,
		"hideGenerator": true,
		"media": "media"
	}
}
